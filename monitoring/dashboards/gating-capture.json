{
  "id": null,
  "title": "Gating & Capture",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "call",
        "label": "Call",
        "type": "query",
        "query": "label_values(ai_agent_audio_capture_enabled, call_id)",
        "includeAll": true,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "TTS Gating Active (sum)",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {"expr": "sum(sum_over_time(ai_agent_tts_gating_active{call_id=~\"$call\"}[$__range])) or vector(0)", "refId": "A"}
      ]
    },
    {
      "type": "stat",
      "title": "Audio Capture Enabled (sum)",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {"expr": "sum(sum_over_time(ai_agent_audio_capture_enabled{call_id=~\"$call\"}[$__range])) or vector(0)", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Gating Active over time",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {"expr": "avg_over_time(sum without (call_id) (ai_agent_tts_gating_active{call_id=~\"$call\"})[$__interval]) or 0", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Audio Capture Enabled over time",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [
        {"expr": "avg_over_time(sum without (call_id) (ai_agent_audio_capture_enabled{call_id=~\"$call\"})[$__interval]) or 0", "refId": "A"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Barge-in Events (rate 5m)",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [
        {"expr": "rate(ai_agent_barge_in_events_total{call_id=~\"$call\"}[5m]) or vector(0)", "refId": "A"}
      ]
    }
  ]
}
